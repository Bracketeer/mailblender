$dark = #404040
$brand = #505050
$brand2 = #046c60
$light = #e3e4e8

.body-main
	padding 0
	margin 0
	font-family 'Helvetica Neue', Helvetica, sans-serif
	color $dark
	background-color $light

.header-main
	position fixed
	width 100%
	height 120px
	left 0
	top 0
	margin-left 0
	text-align left
	background darken($dark, 5%)
	color $light
	z-index 3
	display flex
	flex-flow wrap
	justify-content space-around
	box-shadow 0px 3px 5px rgba(0, 0, 0, 0.5)

.BlenderName h1
	font-family 'Helvetica Neue', Helvetica, sans-serif
	font-size 40px
	font-weight 100
	margin 0
	color $light
	padding-top 8px
	padding-left 30px

.BlenderName h2
	font-family 'Helvetica Neue', Helvetica, sans-serif
	font-size 16px
	font-weight 100
	margin 0
	color $brand
	padding-bottom 8px
	padding-left 30px
	text-align center

.templateview
	width 225px
	height 375px
	background #fff
	box-shadow 0px 0px 10px 2px alpha(black, 50%)
	margin 15px
	overflow hidden

.templateviewport
	display flex
	flex-flow wrap
	width 100%
	justify-content left

.templateviewbanner
	width 225px
	height auto
	min-height 40px
	padding-top 5px
	padding-bottom 5px
	position relative
	opacity 1
	background $brand

input
	margin-left 8px
	width 90%
	padding 10px 5px
	font-family 'Helvetica Neue', Helvetica, sans-serif
	font-size 16px
	font-weight 200
	backgroundlighten($dark, 5%)
	border 0
	color #fff

-webkit-input-placeholder
  color #fff

.templateview h2
	font-family 'Helvetica Neue', Helvetica, sans-serif
	font-size 16px
	font-weight 200
	margin 0
	padding 10px
	color #FFF
	text-align left

.container
	margin-top 120px
	margin-left auto
	margin-right auto
	display block
	flex-flow wrap
	justify-content center
	max-width 1020px

.templatemenu
	color #fff
	outline 0
	font-size 20px
	background none
	border 0
	-webkit-transition .15s ease-in-out
		-moz-transition .15s ease-in-out
		-o-transition .15s ease-in-out
		transition .15s ease-in-out

.menubanner
	background darken($brand2, 5%)
	width 225px
	height auto
	overflow hidden
	-webkit-transform height 2s ease-in-out, visibility 1s linear
	-moz-transform height 2s ease-in-out, visibility 1s linear
	-o-transform height 2s ease-in-out, visibility 1s linear
	-ms-transform height 2s ease-in-out, visibility 1s linear
	transform height 2s ease-in-out, visibility 1s linear
	z-index 2

.menubanneropen
	background #cc474c
	width 100%
	max-height 225px

.remove-btn
	background none
	border 1px solid #fff
	margin5px
	padding10px 20px
	border-radius 20px
	color #fff
	font-family 'Helvetica Neue', Helvetica, sans-serif
	font-weight 200
	font-size 16px
	-webkit-transition .5s ease-in-out
		-moz-transition .5s ease-in-out
		-o-transition .5s ease-in-out
		transition .5s ease-in-out

.remove-btnhover
	background #e3656c

.cancel-btn
	background none
	border 1px solid #fff
	border-radius 20px
	margin5px
	padding10px 20px
	color $light
	font-family 'Helvetica Neue', Helvetica, sans-serif
	font-weight 200
	font-size 16px
	-webkit-transition .5s ease-in-out
		-moz-transition .5s ease-in-out
		-o-transition .5s ease-in-out
		transition .5s ease-in-out

.cancel-btnhover
		background #e3656c

.searchbar-container
	width 300px
	height 50px
	display flex
	align-items right

.searchbar
	border 0px
	margin 10px
	color $light
	padding10px 20px
	border-radius 20px
	outline 0
	display flex
	align-items center

.searchbar-webkit-input-placeholder
   color $light

.template-thumb
	width 100%
	height auto
	background $light

.nav-bar
	background $brand2
	width 100%
	padding 5px 10px
	box-shadow inset 0px 4px 0px -2px $brand

.nav-text
	font-size 20px
	color #fff
	text-decoration none
	margin 5px
	padding 5px

/* animate ngRepeat in template listing */

.templateview.ng-enter,
.templateview.ng-leave,
.templateview.ng-move
  -webkit-transition 0.5s ease all
  -moz-transition 0.5s ease all
  -o-transition 0.5s ease all
  transition 0.5s ease all

.templateview.ng-enter,
.templateview.ng-move
  opacity 0
  width 0
  overflow hidden

.templateview.ng-move.ng-move-active,
.templateview.ng-enter.ng-enter-active
  opacity 1
  width 225px

.templateview.ng-leave
  opacity 1
  overflow hidden
	width 225px

.templateview.ng-move.ng-move-active,
.templateview.ng-leave.ng-leave-active
  opacity 0
	width 0

/* cross fading between routes with ngView */

.view-container
  position relative

.view-frame.ng-enter,
.view-frame.ng-leave
  background white
  position absolute
  top 25%
  left 0
  right 0
	width

.view-frame.ng-move,
.view-frame.ng-enter
  -webkit-animation 0.5s fade-in
  	-moz-animation 0.5s fade-in
  	-o-animation 0.5s fade-in
  	animation 0.5s fade-in
  z-index 100

.view-frame.ng-move,
.view-frame.ng-enter,
.view-frame.ng-leave
  -webkit-animation 0.5s fade-out
  	-moz-animation 0.5s fade-out
  	-o-animation 0.5s fade-out
  	animation 0.5s fade-out
	z-index 99

	.view-frame.ng-move,
	.view-frame.ng-enter,
	.view-frame.ng-leave {
	  -webkit-animation: 0.5s fade-out;
	  -moz-animation: 0.5s fade-out;
	  -o-animation: 0.5s fade-out;
	  animation: 0.5s fade-out;
		z-index: 99;
	}

	@keyframes fade-in {
	  from { opacity: 0; width: 0; }
	  to { opacity: 1; width: 225px; }
	}
	@-moz-keyframes fade-in {
		from { opacity: 0; width: 0; }
	  to { opacity: 1; width: 225px; }
	}
	@-webkit-keyframes fade-in {
		from { opacity: 0; width: 0; }
	  to { opacity: 1; width: 225px; }
	}

	@keyframes fade-out {
		from { opacity: 0; width: 225px; }
	  to { opacity: 1; width: 0; }
	}
	@-moz-keyframes fade-out {
	  from { opacity: 1; width: 225px; }
	  to { opacity: 0; width: 0; }
	}
	@-webkit-keyframes fade-out {
		from { opacity: 1; width: 225px; }
	  to { opacity: 0; width: 0; }
	}
