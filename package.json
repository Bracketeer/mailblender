{
  "name": "mailblender",
  "productName": "Mailblender",
  "version": "0.0.0",
  "description": "An app for visually formatting and manipulating html and css for building emails.",
  "license": "MIT",
  "repository": "bracketeer/mailblender",
  "author": {
    "name": "bracketeer",
    "email": "brent.stradling@gmail.com",
    "url": "eyegoop.com"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=0.31.1"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "electron-app",
    "angular",
    "bootstrap"
  ],
  "dependencies": {
    "angular-modal-service": "^0.6.9",
    "angular-ui-sortable": "^0.13.4",
    "electron-debug": "^0.1.1",
    "electron-reload": "^0.2.0"
  },
  "devDependencies": {
    "electron-packager": "^5.0.0",
    "electron-prebuilt": "^0.31.1",
    "xo": "^0.7.1"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "prefer-arrow-callback": 0
    }
  }
}
